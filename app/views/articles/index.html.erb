<div class="grid grid-cols-2 gap-4">
  <div>
    <h1 class="text-4xl font-bold text-gray-500">Live Headlines</h1>
    <div class="card-group">
      <% unless @live_articles.empty? %>
        <% @articles.each do |article| %>
          <div class="card">
            <%= image_tag URI.parse(article.url_to_image).normalize.to_s, class:"w-48 h-auto", alt:'' %>
            <div class="card-body py-2">
              <h4 class="card-title font-bold text-gray-500"><%= article.title %></h4>
              <p class="card-text my-2 text-gray-800"><%= article.content %></p>
              <div class="flex justify-between ">
                <p class="card-text text-gray-500"><%= article.source %></p>
                <p class="card-text text-gray-500"><%= article.publish_at %></p>
              </div>
            </div>
            <div class="card-footer flex justify-between text-center">
              <%= link_to 'Save', articles_path(article), class: 'inline-block w-full px-4 py-2 leading-none border rounded text-white bg-green-500 hover:bg-green-600' %>
              <%= link_to 'Read', article.url, class: 'inline-block w-full px-4 py-2 leading-none border rounded text-white bg-blue-500 hover:bg-blue-600' %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="py-4 font-bold text-gray-500">No Headlines</p>
      <% end %>
    </div>
  </div>
  <div>
    <h1 class="text-4xl font-bold text-gray-500">Saved Headlines</h1>
    <div class="card-group">
      <% unless @articles.empty? %>
        <% @articles.each do |article| %>
          <div class="card">
            <%= image_tag URI.parse(article.url_to_image).normalize.to_s, class:"w-48 h-auto", alt:'' %>
            <div class="card-body py-2">
              <h4 class="card-title font-bold text-gray-500"><%= article.title %></h4>
              <p class="card-text my-2 text-gray-800"><%= article.content %></p>
              <div class="flex justify-between ">
                <p class="card-text text-gray-500"><%= article.source %></p>
                <p class="card-text text-gray-500"><%= article.publish_at %></p>
              </div>
            </div>
            <div class="card-footer flex justify-between text-center">
              <%= link_to 'Remove', article_path(article), method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' }, class: 'inline-block w-full px-4 py-2 leading-none border rounded text-white bg-red-500 hover:bg-red-600' %>
              <%= link_to 'Read', article.url, class: 'inline-block w-full px-4 py-2 leading-none border rounded text-white bg-blue-500 hover:bg-blue-600' %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>No Headlines</p>
      <% end %>
    </div>
  </div>
</div>
