<h1>User Login Form</h1>
<%= form_with scope: :session, url: sessions_path, class: 'max-w-md mx-auto' do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-input' %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-input' %>
  </div>
  <div>
    <%= f.submit 'Login', class: 'btn' %>
  </div>
<% end %>
